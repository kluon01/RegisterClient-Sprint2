<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ListView
            android:id="@+id/list_view_topproducts"
            android:layout_width="377dp"
            android:layout_height="580dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="28dp"/>

    <TextView
        android:id="@+id/lookupcode"
        android:textSize="15sp"
        android:layout_marginLeft="17dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/list_view_topproducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/column_lookupcode"
        />
    <TextView
        android:id="@+id/count"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/lookupcode"
        android:layout_above="@+id/list_view_topproducts"
        android:layout_marginLeft="140dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/column_count"
        />
    <TextView
        android:id="@+id/sold"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/count"
        android:layout_above="@+id/list_view_topproducts"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/column_sold"
        />

</RelativeLayout>